<% include ./partials/header.ejs %> <% include ./other_pages/partials/navbar.ejs
%>

<style>
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
</style>
<div class="form_wrapper">
  <div class="form_container">
    <div class="title_container">
      <h2>Deposit Form</h2>
    </div>
    <div class="row">
      <form action="/deposit" method="post" enctype="multipart/form-data">
        <div class="input_field select_option">
          <select name="depositNo" required>
            <option>Numbers For Deposit</option>
            <option>03271582301 Jazz Cash</option>
          </select>
          <div class="select_arrow"></div>
        </div>
        <div class="input_field select_option">
          <select name="method" required>
            <option>Select method to deposit</option>
            <option>easypaisa</option>
            <option>Jazz Cash</option>
          </select>
          <div class="select_arrow"></div>
        </div>
        <div class="input_field">
          <span><i class="fa-solid fa-building-columns"></i></span>
          <input type="text" name="bankName" placeholder="Bank Name" required />
        </div>
        <div class="input_field">
          <span><i class="fa-solid fa-building-columns"></i></span>
          <input
            type="text"
            name="accountNo"
            placeholder="Accouant Number"
            required
          />
        </div>
        <div class="input_field select_option">
          <select name="plane" required>
            <option>Select Your Palne</option>
            <option>5000</option>
            <option>7000</option>
          </select>
          <div class="select_arrow"></div>
        </div>
        <div class="input_field">
          <span><i class="fa-solid fa-user"></i> </span>
          <input
            type="text"
            name="accountHolder"
            placeholder="Account Holder"
            required
          />
        </div>
        <div class="input_field">
          <span><i class="fa-solid fa-id-badge"></i></span>
          <input type="text" name="tid" placeholder="Transection ID" required />
        </div>

        <div class="input_field select_option">
          <span><i aria-hidden="true" class="fa fa-"></i></span>
          <input type="file" name="secreenShot" required />
        </div>

        <input class="button" type="submit" id="submitBtn" value="Submit" />
        <a href="/profile/finance/deposit/depositdetails">Deposit History</a>
      </form>
    </div>
  </div>
</div>
<% include ./other_pages/partials/footer.ejs %>
