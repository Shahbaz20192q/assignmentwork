<% include ./partials/header.ejs %> <% include ./other_pages/partials/navbar.ejs
%>
<style>
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
</style>
<div class="form_wrapper">
  <div class="form_container">
    <div class="title_container">
      <h2>Withdraw Form</h2>
    </div>
    <div class="row">
      <div class="">
        <form action="/withdraw" method="post">
          <div class="row clearfix"></div>
          <div class="input_field">
            <span><i class="fa-solid fa-building-columns"></i></span>
            <input
              type="text"
              name="bankName"
              placeholder="Bank Name"
              required
            />
          </div>
          <div class="input_field">
            <span><i class="fa-solid fa-building-columns"></i></span>
            <input
              type="text"
              name="accountNo"
              placeholder="Accouant Number"
              required
            />
          </div>

          <div class="input_field">
            <span><i class="fa-solid fa-user"></i> </span>
            <input
              type="text"
              name="accountHolder"
              placeholder="Account Holder"
              required
            />
          </div>

          <div class="input_field">
            <span><i class="fa-solid fa-dollar-sign"></i></span>
            <input type="text" name="amount" placeholder="Amount" required />
          </div>

          <input class="button" type="submit" id="submitBtn" value="Submit" />
          <a href="/profile/finance/withdraw/history">Withdraw History</a>
          <div></div>
        </form>
      </div>
    </div>
  </div>
</div>
<% include ./other_pages/partials/footer.ejs %>
