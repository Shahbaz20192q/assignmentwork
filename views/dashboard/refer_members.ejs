<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <title>Refrence members</title>
</head>
<body>
    <%include ./parshies/menu.ejs%>
    <div class="content">
     <div class="title-info">
        <p>All Members</p>
        <form action="/dashbord/refer_members" method="get" class="search_form">
                <input type="text" name="search" placeholder="Search by ID" value="<%= search %>" />
                <button type="submit"><i class="fas fa-search"></i></button>
        </form>
        <i class="fa fa-align-justify three-line" onclick="toggle()" aria-hidden="true"></i>
     </div>
     
     <div class="tableDiv">
         <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>User Name</th>
                    <th>Verification</th>
                    <th>Plane</th>
                    <th>Total Members</th>
                    <th>View Members</th>
                </tr>
            </thead>
            <tbody>
                <%users.forEach(function(elem){%>
                    <tr>
                        <td>
                            <%=elem.date.getDate()%>-<%=elem.date.getMonth()+1%>-<%=elem.date.getFullYear()%>
                        </td>
                        <td><%=elem._id%></td>
                        <td><%=elem.firstName%></td>
                        <td><%=elem.lastName%></td>
                        <td><%=elem.username%></td>
                        <td><%=elem.verified%></td>
                        <td><%=elem.plane%></td>
                        <td><%=elem.members.length%></td>
                        <td><a href="/viewmembers/<%=elem.username%>">View Members</a></td>
                    </tr>
                <%}) %>
            </tbody>
         </table>
     </div>
    </div>
</body>
</html>