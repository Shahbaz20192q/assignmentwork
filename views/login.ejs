<% include ./partials/header.ejs %>
<% include ./other_pages/partials/navbar.ejs %>
<div class="login-form-wreper">
  <div class="form_wrapper">
    <div class="form_container">
      <div class="title_container">
        <h2>Login Your Accouant</h2>
      </div>
      <div class="row">
        <div class="">
          <form action="/login" method="post">
            <div class="input_field">
              <span><i aria-hidden="true" class="fa fa-user"></i></span>
              <input
                type="text"
                name="username"
                placeholder="User Name"
                required
              />
            </div>
            <div class="input_field">
              <span><i aria-hidden="true" class="fa fa-lock"></i></span>
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Password"
                required
              />
            </div>
            <% if (messages.error) { %>
              <p class="error" style="color: rgba(232, 18, 18, 0.888);"><%= messages.error[0] %></p>
            <% } %>
            <input class="button" type="submit" id="submitBtn" value="Log In" />
            <p><a href="/forgot" style="color: blue; text-decoration: underline;">Forgot password</a></p>
            <p>Don't have an account <a href="/" style="color: blue; text-decoration: underline;">Register</a></p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ./other_pages/partials/footer.ejs %>
