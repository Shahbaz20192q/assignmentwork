<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <title>Dashboard</title>
</head>

<body>
    <%include ./parshies/menu.ejs%>
    <div class="content">
     <div class="title-info">
        <p>dashboard</p>
        <i class="fa fa-align-justify three-line" onclick="toggle()" aria-hidden="true"></i>
     </div>
     <div class="data-info">
        <div class="box">
            <i class="bi bi-people-fill"></i>
            <div class="data">
                <p>All Users</p>
                <span><%=users.length%></span>
            </div>
        </div>
        <div class="box">
            <i class="bi bi-file-pdf-fill"></i>
            <div class="data">
                <p>All Assignments</p>
                <span><%=posts.length%></span>
            </div>
        </div>
            <div class="box">
                <i class="bi bi-patch-check-fill"></i>
                <div class="data">
                    <span id="activeusers"> <%=verifiedUsers.length%></span>
                </div>
            </div>
        <div class="box">
            <i class="fas fa-dollar"></i>
            <div class="data">
                <p>revenue</p>
                <span>$100</span>
            </div>
        </div>
        
     </div>
     <div class="title-info">
        <p>products</p>
        <i class="fas fa-table"></i>
     </div>
     <div class="tableDiv">
         <table>
            <thead>
                <tr>
                    <th>prpduct</th>
                    <th>price</th>
                    <th>count</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>tv</td>
                    <td><span class="price">$100</span></td>
                    <td><span class="count">30</span></td>
                </tr>
                <tr>
                    <td>phone</td>
                    <td><span class="price">$150</span></td>
                    <td><span class="count">30</span></td>
                </tr>
                <tr>
                    <td>charger</td>
                    <td><span class="price">$10</span></td>
                    <td><span class="count">30</span></td>
                </tr>
                <tr>
                    <td>laptop</td>
                    <td><span class="price">$350</span></td>
                    <td><span class="count">70</span></td>
                </tr>
                <tr>
                    <td>keyboard</td>
                    <td><span class="price">$20</span></td>
                    <td><span class="count">70</span></td>
                </tr>
                <tr>
                    <td>mouse</td>
                    <td><span class="price">$5</span></td>
                    <td><span class="count">70</span></td>
                </tr>
                <tr>
                    <td>mic</td>
                    <td><span class="price">$50</span></td>
                    <td><span class="count">70</span></td>
                </tr>
            </tbody>
         </table>
     </div>
    </div>
</body>
</html>